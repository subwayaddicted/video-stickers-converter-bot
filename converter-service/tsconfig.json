{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 17",
    
    "compilerOptions": {
      "baseUrl": "",

      "outDir": "dist",
      "rootDir": "src",

      "module": "es2020",
      "target": "es2020",
      "moduleResolution": "node",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": [],
      "noImplicitAny": false
    },
    "include": ["src/**/*" ,"**/*.ts"],
    "exclude": [
        "node_modules"
    ]
  }